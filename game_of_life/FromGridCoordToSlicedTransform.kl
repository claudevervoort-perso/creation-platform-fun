use Xfo;
use Vec3;
use Container;

operator fromGridCoordToSlicedTransform(in Integer coords[100000][3], in Size numPoints, io Container selfContainer, io Xfo globalXfos<>) {
	selfContainer.resize(numPoints);
	Vec3 scale = Vec3(0.5,0.5,0.5);
	for(Integer i=0; i<numPoints; i++) {
		Vec3 position = Vec3(scale.x * coords[i][0], scale.y * coords[i][1], scale.z * coords[i][2]);
        globalXfos[i].tr = position;
        globalXfos[i].sc = scale;
    }
    report("transformed " + numPoints + " into transform");
}

operator entry() {
	Vec3 scale(2,0.5,2.5);
	Integer  positions[100000][3];
	positions[0][0]=0;
	positions[0][1]=1;
	positions[0][2]=1;
	Xfo xfos<>;
	Container container;
	Size numPoints=1;
	fromGridCoordToSlicedTransform(positions, numPoints, container, xfos);
}